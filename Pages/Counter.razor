@page "/counter"
@page "/alternateNameforCounter"

<!-- Integer route constraint for starting value added as a suffix-->
@page "/counter/{startingValue:int}/{IncrementBy:int}"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click to increase counter by @IncrementBy</button>

@code {
    private int currentCount = 0;

    
    [Parameter]
    public int StartingValue { get; set; } = 0;

    [Parameter]
    public int IncrementBy { get; set; } = 5;

    private void IncrementCount()
    {
        currentCount += IncrementBy;
    }

    protected override void OnParametersSet()
    {
        currentCount = StartingValue;
        base.OnParametersSet();
    }
}
